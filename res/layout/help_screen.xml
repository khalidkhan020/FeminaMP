<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#c0000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:background="#00000000"
                android:gravity="center_vertical|right"
                android:text="k"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:background="#00000000"
                android:gravity="center_vertical|center_horizontal"
                android:text="q"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_weight=".3"
                android:background="#00000000"
                android:gravity="center_vertical|left"
                android:text="C"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />
        </LinearLayout>

        <TextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:text="Tap or Scroll to see Sections"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical|right"
                android:text="q"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:background="#00000000"
                android:gravity="center_vertical|left"
                android:text="q"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />
        </LinearLayout>

        <TextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|left"
            android:text="Tap to enter start and end date"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|center"
            android:text="u"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:font="newfont.ttf" />

        <TextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|center_horizontal"
            android:text="Swipe to ovulation page"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|center"
            android:text="w"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:font="newfont.ttf" />

        <TextView
            android:id="@+id/next_period_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|center_horizontal"
            android:text="Swipe to period page"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/next_period_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#00000000"
            android:gravity="center_vertical|right"
            android:text="Tap to see fertile perdiction"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_vertical|right"
            android:text="D"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:font="newfont.ttf" />

    </LinearLayout>

</LinearLayout>