<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="H"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:font="newfont.ttf" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/click_for_checkbox"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:font="PWChalk.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:weightSum="2" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/click_other_option"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="PWChalk.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="s"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="5dp" >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/move"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="t"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="q"
                android:layout_toRightOf="@+id/move"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />
        </RelativeLayout>

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn1"
            android:text="@string/scroll_above"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:font="PWChalk.ttf" />
    </LinearLayout>

</LinearLayout>