<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="8" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swip_to_partner"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="u"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center_horizontal"
                android:text="r"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_icon_size"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:text="@string/today_option"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size"
                app:font="PWChalk.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight=".5"
                android:gravity="center_horizontal"
                android:text="D"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_icon_size"
                app:font="newfont.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="w"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn1"
                android:text="@string/swip_to_calendar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>