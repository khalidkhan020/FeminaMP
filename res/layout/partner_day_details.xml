<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/current_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_heading_bg"
        android:gravity="center"
        android:text="Date"
        android:textColor="@color/default_heading_fg"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/current_date"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notes"
                style="@style/PartnerCalenderDDH"
                android:text="Notes" />

            <TextView
                android:id="@+id/notes_data"
                style="@style/PartnerCalenderDD"
                android:text="Data" />

            <TextView
                android:id="@+id/moods"
                style="@style/PartnerCalenderDDH"
                android:text="Moods" />

            <TextView
                android:id="@+id/moods_data"
                style="@style/PartnerCalenderDD"
                android:text="data" />

            <TextView
                android:id="@+id/symptoms"
                style="@style/PartnerCalenderDDH"
                android:text="Symptoms" />

            <TextView
                android:id="@+id/symptoms_data"
                style="@style/PartnerCalenderDD"
                android:text="sym data" />

            <TextView
                android:id="@+id/pills"
                style="@style/PartnerCalenderDDH"
                android:text="Pills " />

            <TextView
                android:id="@+id/pills_data"
                style="@style/PartnerCalenderDD"
                android:text="pil data" />
        </LinearLayout>
    </ScrollView>

 <com.linchpin.periodtracker.widget.HelpButton
     android:id="@+id/partnercalenderhelpbutton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
   android:layout_alignParentBottom="true"
   android:layout_alignParentRight="true"
     android:background="#0000"
     android:paddingBottom="10dp"
        android:paddingRight="10dp"
     android:src="@drawable/help" />
    
</RelativeLayout>