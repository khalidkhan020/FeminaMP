<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="80dp"
             >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="v"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="p"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="s"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:font="newfont.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="30dp" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/Your_email"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size"
                app:font="PWChalk.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/click_to"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size"
                app:font="PWChalk.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/Your_name"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size"
                app:font="PWChalk.ttf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="v"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="s"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/partner_email"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/partner_name"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="w"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn1"
            android:text="@string/swip_today_info"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            app:font="PWChalk.ttf" />
    </LinearLayout>

</LinearLayout>