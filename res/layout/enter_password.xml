<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="#ffecd0ec"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/enterpasswordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:text="@string/enterpassword"
            android:textAlignment="gravity"
            android:textColor="@color/newdatecolor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/checkpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/pillname_box"
            android:hint="@string/currentpasscode"
            android:inputType="textWebPassword"
            android:padding="10dp"
            android:textColor="@color/newdatecolor" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/forgotpassword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_weight=".5"
                android:background="@color/newdatecolor"
                android:padding="10dp"
                android:text="@string/forgotpassword"
                android:textColor="@color/yellowtextcolor"
                android:textSize="15dp" />

            <Button
                android:id="@+id/checkpasswordbutton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginLeft="1dp"
                android:layout_weight=".5"
                android:background="@color/newdatecolor"
                android:padding="10dp"
                android:text="@string/ok"
                android:textColor="@color/yellowtextcolor"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>