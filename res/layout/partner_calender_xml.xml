<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="p"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="p"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:font="newfont.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/change_month"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />

        </RelativeLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
             <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="p"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:font="newfont.ttf" />
              <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/select_date"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
     
            android:gravity="center_horizontal" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/swip_to_today"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="u"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="w"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/btn1"
                android:text="@string/swip_to_timeline"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:font="PWChalk.ttf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>