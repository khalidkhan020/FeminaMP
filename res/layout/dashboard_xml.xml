<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".3"
            android:orientation="vertical" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="M"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_icon_size"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="5dp"
                android:gravity="top"
                android:text="@string/nextFertile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:font="PWChalk.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".7"
            android:orientation="vertical" >

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:id="@+id/next_period_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="z"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_icon_size"
                app:font="newfont.ttf" />

            <com.linchpin.periodtracker.utlity.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:text="@string/nextDate"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_text_size"
                app:font="PWChalk.ttf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="p"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:text="@string/startEndDate"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="right"
            android:text="r"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:text="@string/option"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="right"
            android:text="D"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:id="@+id/next_period_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="z"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:text="@string/periodDay"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />
    </LinearLayout>

</LinearLayout>