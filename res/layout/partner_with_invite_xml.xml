<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.linchpin.myperiodtracker"
    android:id="@+id/imageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#c0000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cross_icon"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/Your_name"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/Your_email"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="r"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="m"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:weightSum="2" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="t"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="t"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_icon_size"
            app:font="newfont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="25dp" >

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/send_invitation"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />

        <com.linchpin.periodtracker.utlity.FontableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/send_request"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/activity_text_size"
            app:font="PWChalk.ttf" />
    </LinearLayout>

</LinearLayout>