<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightpinkbg"
    android:id="@+id/content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/wieghtlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:id="@+id/linearwieghtlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/weightvalueminus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/subt_box" />

                    <EditText
                        android:id="@+id/weightvalue"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/pillname_box"
                        android:hint="@string/enterweight"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:textColor="@color/newdatecolor" />

                    <ImageView
                        android:id="@+id/weightvalueplus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/add_box" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textwieght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/weight"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/weightunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/linearwieghtlayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/linearwieghtlayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/text_box"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#f3842c" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/wieghtlayout"
                android:layout_margin="10dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/heightlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wieghtlayout"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:id="@+id/linearheightlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/heightvalueminus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/subt_box" />

                    <EditText
                        android:id="@+id/editheightvalue"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/pillname_box"
                        android:hint="@string/enterheight"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:textColor="@color/newdatecolor" />

                    <ImageView
                        android:id="@+id/heightvalueplus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/add_box" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texthieght"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/hieght"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/heightunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/linearheightlayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/linearheightlayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/text_box"
                    android:gravity="center"
                    android:textColor="#f3842c" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/heightlayout"
                android:layout_margin="10dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/templayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heightlayout"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp" >

                <LinearLayout
                    android:id="@+id/lineartemplayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/temperaturevalueminus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/subt_box" />

                    <EditText
                        android:id="@+id/temperaturevalue"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/pillname_box"
                        android:hint="@string/entertemp"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:textColor="@color/newdatecolor" />

                    <ImageView
                        android:id="@+id/temperaturevalueplus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/add_box" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texttemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/tem"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/temperatueunit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lineartemplayout"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/lineartemplayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/text_box"
                    android:gravity="center"
                    android:textColor="#f3842c" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/templayout"
                android:layout_margin="10dp"
                android:background="#cccccc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/templayout"
                android:layout_marginTop="10dp"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/textbmitext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                    android:layout_weight=".3"
                    android:text="@string/bmi"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textbmi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".3"
                    android:gravity="center"
                    android:text="22222"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor" />

                <TextView
                    android:id="@+id/textbmimesg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight=".4"
                    android:gravity="right"
                    android:text="222222"
                    android:textAlignment="gravity"
                    android:textColor="@color/newdatecolor" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/inforelative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="10dp" >

        <com.linchpin.periodtracker.widget.HelpButton
            android:id="@+id/weightinfobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:background="#0000"
         android:src="@drawable/help" />
    </RelativeLayout>

</RelativeLayout>