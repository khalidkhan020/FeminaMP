<selector xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/myselector">

    <!-- Non focused states -->
    <item android:drawable="@drawable/normal_btn" android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="@color/caldroid_sky_blue"/>
    <item android:drawable="@drawable/activ_right_btn" android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="@color/green"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/normal_btn" android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="@color/caldroid_sky_blue"/>
    <item android:drawable="@drawable/activ_right_btn" android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="@color/green"/>

    <!-- Pressed -->
    <item android:drawable="@drawable/activ_right_btn" android:state_pressed="true" android:color="@color/green"/>

</selector>
